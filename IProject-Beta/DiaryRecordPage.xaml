<Page x:Class="IProject_Beta.DiaryRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IProject_Beta"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiaryRecordPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Column="1">
            <StackPanel>
                <Label Content="21.07.2022" Background="Transparent" FontSize="22" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="DarkGray"></Label>
                <TextBox x:Name="RecordBox" TextWrapping="Wrap" AcceptsReturn="True" LostFocus="TextBox_LostFocus"></TextBox>
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Page>
